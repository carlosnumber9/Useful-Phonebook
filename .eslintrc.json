{
  "root": true,
  "extends": ["plugin:vue/recommended"],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "globalReturn": false,
      "impliedStrict": false,
      "jsx": false
    }
  },
  "plugins": ["eslint-plugin-vue"],
  "overrides": [
    {
      "files": ["src/**/*.js"],
      "excludedFiles": ["node_modules/*", "public/*"],
      "rules": { "quotes": ["error", "single"] }
    }
  ]
}
